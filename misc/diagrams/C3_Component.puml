@startuml C4 Container Diagram for FetchBolig.js
!include <C4/C4_Component>
Container_Boundary(web_app, "Web Application") {
    Component(loginPage, "Login Page", "Alpine, HTML", "Allows users to enter their credentials and log in to the application.")
    'Component(auth, "Authentication", "TypeScript","Takes user credentials and manages authentication with relevant proxy")
    Component(upcomingPage, "Upcoming agreements", "Alpine, HTML", "Displays a list of upcoming housing agreements the user has applied for.")
    Component(detailsPage, "Housing Details", "Alpine, HTML", "Shows detailed information about a specific housing option.")
    Component(messagesPage, "Messages", "Alpine, HTML", "Show the messages related to the housing")
    Component(calendar, "Calendar Integration", "?", "Allows users to add housing agreement dates to their personal calendar.")
    Component(maps, "Map Integration", "?", "Displays housing location on a map.")
    Component(data, "Data Management", "TypeScript", "Retrives data from local storage or proxy depending on whats needed" )
}
Container(proxy_deas, "DEAS Proxy", "Node.js, Hono", "Provides users data from DEAS's FindBolig.nu platform." )
ContainerDb(database, "Local Storage", "Browser Storage", "Stores user's applied housing options locally.")

Rel(data, database, "Reads/Writes users housing data", "Local Storage API")
Rel_R(data, proxy_deas, "Provides users housing data", "HTTPS/JSON")


Rel_U(upcomingPage, maps, "Opens", "Maps API")
Rel_U(upcomingPage, calendar, "Creates Event", "iCal/ICS")
Rel_R(upcomingPage, detailsPage, "Navigates to", "Pinecone")

Rel_U(detailsPage, maps, "Opens", "Maps API")
Rel_U(detailsPage, calendar, "Creates Event", "iCal/ICS")
Rel_R(detailsPage, messagesPage, "Navigates to", "Pinecone")

Rel_R(loginPage, data, "Exchanges user credentials", "Cookie")
'Rel_R(auth, data, "Exchanges user credentials", "Cookie")
Rel(upcomingPage, data, "Fetches", "JSON")
Rel(detailsPage, data, "Fetches", "JSON")
Rel(messagesPage, data, "Fetches", "JSON")
@enduml