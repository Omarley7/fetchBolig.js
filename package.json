{
  "type": "module",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.21.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "esbuild client/app.ts --bundle --outfile=public/dist/app.js --watch",
    "dev:css": "tailwindcss -i client/styles.css -o public/dist/styles.css --watch",
    "build": "npm run build:client && npm run build:css",
    "build:client": "esbuild client/app.ts --bundle --outfile=public/dist/app.js --minify",
    "build:css": "tailwindcss -i client/styles.css -o public/dist/styles.css --minify",
    "start": "node --loader tsx server/index.ts"
  }
}
