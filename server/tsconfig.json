{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
